{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Mot de passe oublié{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container">
        <div class="mt-5 mb-5 col-lg-6 mx-auto">
            <h2 class="mb-5 text-center">Mot de passe oublié</h2>

            <div class="mb-3">
            <small>
                Saisissez l'adresse e-mail associée à votre compte. 
                Nous vous enverrons un lien par e-mail pour réinitialiser votre mot de passe.
            </small>
        </div>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <button class="btn btn-success w-100">Envoyer le lien de réinitialisation</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}

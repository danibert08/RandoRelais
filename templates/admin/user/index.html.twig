{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs - {{parent()}}{% endblock %}

{% block body %}
{% include "partials/_admin-aside.html.twig" %}
		
				<div class="container my-5 admin w-75 mt-5">
					<h1 class="text-center mb-5">Liste des utilisateurs</h1>
					<div class="d-grid w-75 mx-auto d-md-flex justify-content-md-end mb-3">
						<a role="button" class="btn btn-success " href="{{ path('admin_user_new') }}">Ajouter un utilisateur</a>
					</div>
					<table id="mode" class="table table-striped text-center w-75 mx-auto">
						<thead>
							<tr>
								<th scope="col">Id</th>
								<th scope="col">Nom</th>
								<th scope="col">Pr√©nom</th>
								<th scope="col">Roles</th>
                                <th scope="col">Statut</th>
								<th scope="col">actions</th>
							</tr>
						</thead>
						<tbody>
							{% for user in users %}
							
								<tr>
									<th scope="row">{{ user.id }}</th>
								    <td>{{ user.lastName }}</td>
                                    <td>{{ user.firstName}}</td>
                                    <td>{{ user.roles|json_encode()}}</td>
                                    <td>{{ user.status}}</td>
							        <td>
								        <a role="button" class="btn btn-success mb-1" href="{{ path('admin_user_show', {'id': user.id}) }}">Voir</a>
								        <a role="button" class="btn btn-success mb-1"  href="{{ path('admin_user_edit', {'id': user.id}) }}">Editer</a>
							        </td>
                                 </tr>
						    {% else %}
					            <tr>
						            <td colspan="7">No records found</td>
					            </tr>
                            {% endfor %}
                        </tbody>
		            </table>
	            </div>
{% endblock %}

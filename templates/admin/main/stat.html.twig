{% extends 'base.html.twig' %}

	{% block title %}Admin stat
	{% endblock %}

	{% block body %}
	
	{% include "partials/_admin-aside.html.twig" %}
		<section class="container mb-5 admin w-75">
			<h1 class="text-center  mt-5">Statistiques</h1>
			
			<div class="d-flex flex-column  align-items-center align-items-lg-start flex-lg-row justify-content-around">
				<div class="mt-5">
					<h2>Utilisateurs</h2>
					<p>Nombre d'utilisateurs inscrits :
						<strong>{{ usersQuantity }}</strong>
					</p>
					<ul>dont aujourd'hui :
						<li>Marcheurs :
							<strong>{{ walker }}</strong>
						</li>
						<li>
							Anges :
							<strong>{{ angel }}</strong>
						</li>
						<li>
						{% if desactived == 0 or desactived == 1 %}
						Compte désactivé
						{% else %}
						Comptes désactivés
						{% endif %}
						
							{#Compte{{ desactived == 0 ? '' :  's' }}
							désactivé{{ desactived == 0 ? '' :  's' }}#}
							:
							<strong>{{ desactived }}</strong>
						</li>
					</ul>
				</div>
				<div class="mt-5">
					<h2>Popularité des services</h2>
					{% for key, value in serviceList %}
						{% for service in services %}
							{% if service.name == key %}
								<ul>
									<li><img src="{{ asset('assets/uploads/'~ service.image) }}" width="30" alt="">
										-
										{{ key}}
										:
										<strong>{{ value }}</strong>
									</li>
								</ul>
							{% endif %}
						{% endfor %}
					{% endfor %}
				</div>
				<div class="mt-5">
					<h2>Evaluations</h2>
					<p>Evaluations enregistrées
						<strong>
							{{ reviewQuantity }}</strong>
					</p>
					<p>Evaluations sur les 30 derniers jours :
						<strong>{{ reviewQuantityMonth}}</strong>
					</p>
				</div>
			</div>
		</section>
		</div>
	{% endblock %}
